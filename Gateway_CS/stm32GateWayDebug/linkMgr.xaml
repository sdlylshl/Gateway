<Window x:Class="stm32GateWayDebug.linkMgr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="linkMgr" Height="600" Width="300" WindowStartupLocation="CenterScreen" Unloaded="Window_Unloaded" KeyDown="Window_KeyDown">
    <Canvas Height="600" Width="300" Background="#00000000"  VerticalAlignment="Center" HorizontalAlignment="Center"  >
        <Label Content="目标IP地址" Canvas.Left="51" Canvas.Top="86" Width="100"/>
        <TextBox x:Name="txtClnIp" Height="23" Canvas.Left="51" TextWrapping="Wrap" Text="127.0.0.1" Canvas.Top="134" Width="200"/>
        <Button Content="连接服务器" Height="50" Width="100" Canvas.Top="324" Canvas.Left="105" Click="Button_Click" RenderTransformOrigin="0.14,1.26"/>
        <Label Content="目标端口号" Canvas.Left="51" Canvas.Top="180" Width="100"/>
        <TextBox x:Name="txtClnPort" Height="23" Canvas.Left="51" TextWrapping="Wrap" Text="20107" Canvas.Top="228" Width="200"/>
        <Button x:Name="btnCrc32" Content="CRC32" Canvas.Left="51" Canvas.Top="473" Width="75" Height="36" Click="btnCrc32_Click"/>
    </Canvas>
</Window>
