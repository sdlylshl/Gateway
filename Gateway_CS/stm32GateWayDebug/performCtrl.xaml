<UserControl x:Class="stm32GateWayDebug.performCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Border Height="100" Width="100" BorderBrush="Silver" BorderThickness="1">
        <Canvas Height="100" Width="100" Name="cvsMain" >
            <Label Name="lbDis" Content="窗帘" FontSize="18" Width="100" Height="35" HorizontalContentAlignment="Center" Canvas.Top="15" />
            <Button Name="btnBack" Content="退" Canvas.Top="70" Width="30" Height="30" Click="btnBack_Click"/>
            <Button Name="btnStop" Content="停" Canvas.Left="35" Canvas.Top="70" Width="30" Height="30" Click="btnStop_Click"/>
            <Button Name="btnFore" Content="进" Canvas.Left="70" Canvas.Top="70" Width="30" Height="30" Click="btnFore_Click"/>
            <Label x:Name="lbUsable" Height="100" Width="100" Background="Silver" Opacity="0.5" Visibility="Hidden"/>
        </Canvas>
    </Border>
</UserControl>
